}
void cargar(int Mat[MAX][MAX],int N,int M){
	for(int i=0;i<N;i++){
		for(int j=0;j<M;j++){
			cout<<"Matriz ["<<i<<"j["<<j<<"]=";
			cin>>Mat[i][j];
		}
	}
}

void traspaso(int MAT[MAX][MAX], int v[], int N, int M){
	int k=0;
	for(int i=0;i<N;i++){
		for(int j=0;j<M;j++){
			v[k]=M[i][j];
			k++;
		}
	}
}
void mostrarvector(int v[],int N, int M){
	for(int i=0;i<(M*N);i++){
		cout<<"vector["<<i<<"]="<<v[i]<<endl;
	}
}
