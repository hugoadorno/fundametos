void cargar(int Mat[MAX][MAX],int N,int M);
void traspaso(int MAT[MAX][MAX], int v[], int N, int M);
void mostrarvector(int v[],int N, int M);

void main(){
	int Mat[MAX][MAX], v[MAX], N,M;
	cout<<"ingrese el nro de filas: ";
	cin>>N;
	cout<<"ingrese el nro de columnas: ";
	cin>>M;
	cargar(Mat,N,M);
	traspaso(Mat,v,N,M);
	mostrarvector(v,N,M);
