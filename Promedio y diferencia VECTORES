#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100

using namespace std;

void cargarvector (double a[] , int tam); 
void mostrarvector(double a[] , int tam);
double promedio(double a[], int tama√±o);

	void main (){
		double S[MAX];
		int N;
        double prom;
		do{
			cout<<" Ingrese N de elementos del vector";
			cin>> N;
		
	}while (N>MAX||N<=0);
		cargarvector(S,N);
		prom=promedio(S,N);
		
		for(int i=0; i<N; i++)
			cout<<"dif"<< i << " ; "<< S[i]-prom;
		mostrarvector(S,N);
		cout<<prom;
		getch();
	}

	void cargarvector(double a[], int tam)
	{
		for (int i=0; i<tam; i++)
		{
			cout<<"vector ["<<i<<"]= ";
			cin>>a[i];

		}
	}

		void mostrarvector(double a[], int tam)
		{
	     for(int i=0; i<tam; i++)
				cout<<"Vector["<< i <<"]="<<a[i]<<endl;
		}
	
