// funcion.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"
#include <iostream>

using namespace std;

int factorial(int n);


void main(){
	int n, fac;
	cout<<" Ingrese un numero entero: ";
	cin>>n;
	fac=factorial(n);
	cout<<" El factorial es: "<<fac;
	getch();
}

int factorial(int n){
	int fac=1, i=1;
	while (i<=n){
		fac=fac*i;
		i=i+1;
	}
	return(fac);
}
